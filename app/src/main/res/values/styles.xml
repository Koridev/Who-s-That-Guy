<resources>

    <!-- Base application theme. -->
    <style name="WhosThatGuyTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>

        <item name="colorPrimary">@color/primary</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorControlNormal">@color/primary</item>
        <item name="colorControlActivated">@color/primary_dark</item>
        <item name="android:actionMenuTextColor">@color/primary</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_action_navigation_previous_item</item>
        <item name="android:actionBarStyle">@style/WTG.ActionBar</item>

        <item name="android:textAppearance">@style/WTG.Text</item>

    </style>

    <style name="WTG.ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="elevation">2dp</item>
    </style>

    <style name="WTG.Text" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/text_normal</item>
    </style>

    <style name="WTG.Text.Small" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/text_normal</item>
    </style>

    <style name="WTG.Text.Medium" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/text_normal</item>
    </style>

    <style name="WTG.Text.Large" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@color/text_normal</item>
    </style>

    <style name="WTG.PopupTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/primary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="WTG.Toolbar.Title" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20dp</item>
    </style>

</resources>
